@model ICollection<StoricoStatoViewModel>
<div class="modal" tabindex="-1" role="dialog" id="storico-modal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Storico dei campi di stato dell'accordo</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Chiudi">
                    <svg class="icon">
                        <use xlink:href="/lib/bootstrap-italia/dist/svg/sprite.svg#it-close"></use>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="it-timeline-wrapper">
                    <div class="row">
                        @foreach (var stato in Model.OrderBy(s => s.Timestamp))
                        {
                            <div class="col-12">
                                <div class="timeline-element">
                                    <div class="it-pin-wrapper it-evidence">
                                        <div class="pin-icon">
                                            <svg class="icon">
                                                <use xlink:href="/lib/bootstrap-italia/dist/svg/sprite.svg#it-code-circle"></use>
                                            </svg>
                                        </div>
                                        <div class="pin-text"><span>@stato.Timestamp.ToLocalTime().ToString("Y")</span></div>
                                    </div>
                                    <div class="card-wrapper">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="category-top">
                                                    <a class="category" href="#">@stato.Stato.ToDescriptionString()</a>
                                                    <span class="data">@stato.Timestamp.ToLocalTime().ToShortDateString() @stato.Timestamp.ToLocalTime().ToShortTimeString()</span>
                                                    @if (!string.IsNullOrWhiteSpace(stato.Autore))
                                                    {
                                                        <span class="data">@stato.Autore</span>

                                                    }
                                                </div>
                                                <p class="card-text" style="white-space: pre-line">@stato.Note</p>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" data-dismiss="modal">Chiudi</button>
            </div>
        </div>
    </div>
</div>