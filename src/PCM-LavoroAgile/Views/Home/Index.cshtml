}

@if (User.IsInRole(RoleAndKeysClaimEnum.ADMINISTRATOR.ToDescriptionString()))
{
    <h1 class="primary-color d-flex justify-content-center m-5"><strong>Amministrazione - PCM Lavoro Agile</strong></h1>
}
