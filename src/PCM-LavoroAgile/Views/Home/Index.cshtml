                                </a>
                                <p class="card-text">
                                    <partial name="_StatoInvioPartial" model="Model.Transmission" />
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (Model != null && !Guid.Empty.Equals(Model.ChildId))
